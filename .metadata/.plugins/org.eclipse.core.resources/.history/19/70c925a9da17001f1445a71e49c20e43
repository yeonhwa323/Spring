<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.doit.ik.mapper.scott.EmpMapper">
   <!-- ArrayList<EmpDTO> -->
   <select id="selectEmpArray" resultType="org.doit.ik.domain.EmpDTO">


    SELECT d.deptno, dname, loc
          , COUNT(e.empno) numberOfEmps
    FROM dept d FULL JOIN emp e ON d.deptno = e.deptno
    GROUP BY d.deptno, dname, loc
    ORDER BY deptno ASC
  </select>
  
  <!-- DeptDTO dto -->
  <insert id="insertDept">
  	INSERT INTO dept (deptno, dname, loc)
  	VALUES (#{deptno}, #{dname}, #{loc}) 
  </insert>
  
  <delete id="deleteDept">
  	DELETE FROM dept
  	WHERE deptno = #{deptno}
  </delete>
</mapper>
